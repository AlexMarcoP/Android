<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="#33c9ff"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="20dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/play"
        android:layout_width="180dp"
        android:layout_height="208dp"
        android:layout_gravity="center"
        android:onClick="onClickDashboard">

        <ImageView
            android:id="@+id/ivItem1"
            android:layout_width="128dp"
            android:layout_height="85dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/image_play_dashboard"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="@string/play_label"
            android:textSize="31sp" />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scores"
        android:layout_width="195dp"
        android:layout_height="208dp"
        android:layout_gravity="center"
        android:onClick="onClickDashboard">

        <ImageView
            android:id="@+id/ivItem3"
            android:layout_width="128dp"
            android:layout_height="85dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/image_scores_dashboard"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="0dp"
            android:text="@string/scores_label"
            android:textSize="28sp" />


    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/settings"
        android:layout_width="180dp"
        android:layout_height="208dp"
        android:layout_gravity="center"
        android:onClick="onClickDashboard">

        <ImageView
            android:id="@+id/ivItem5"
            android:layout_width="128dp"
            android:layout_height="85dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/image_settings_dashboard"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="@string/settings_label"
            android:textSize="26sp" />


    </RelativeLayout>
</LinearLayout>